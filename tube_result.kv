<TubeScreen>
    name: "tube_screen"
    md_bg_color: self.theme_cls.primaryContainerColor
    text_date: ""
    text_time1: ""
    text_time2: ""
    text_name: ""
    text_description: ""
    text_temp: ""
    text_presure: ""
    text_hum: ""

    MDBoxLayout:
        orientation: "vertical"
        
        MDTopAppBar:
            type: "small" 
            theme_bg_color:"Custom"
            md_bg_color: 0.2, .3, .3, 1
            # padding: "24dp"
            # spacing: dp(25)
            MDTopAppBarTitle:
                text: "По ГОСТ 17.2.4.06-90"
                text_color: "white"
                pos_hint: {"center_x": .5}
                font_style: "Title"
                role: "large"

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    theme_bg_color:"Custom"
                    md_bg_color: 0.2, .7, .3, 1
                    icon: "arrow-left"
                    theme_icon_color: "Custom"
                    icon_color: "white"
                    on_release: app.go_to_result()
                    
            Widget:
        
        ScrollView:
            MDGridLayout:
                id: custom_widget_box
                size_hint_y: None
                cols:1
                #height: self.minimum_height
                padding:[dp(25),dp(15),dp(15),dp(35)]
                #spacing:dp(25)
                height: "3500dp" 

                Spacer:

                
                Spacer:

                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    spacing: "10dp"

                    MDLabel:
                        halign: 'center'
                        font_style: "Title"
                        role: "medium"
                        text: "Выбор способа расчета"
                        size_hint_y: None
                        height: self.texture_size[1]

                MDBoxLayout: 
                    md_bg_color: "red"
                    adaptive_height: True
                    #pos_hint: {'center_x': .1, "center_y": .5}
                    #size_hint_x: .6
                    padding: "24dp"
                    spacing: "6dp"
                    
                    MDCheckbox:
                        id: circle_checkbox
                        group: 'group'
                        active: True
                        #pos_hint: {'center_x': .1, "center_y": .4}
                        on_active: root.on_checkbox_active(0)
                    MDLabel:
                        text: "По ГОСТ 17.2.4.06-90"
                        font_style: "Label"
                        role: "medium"
                        #pos_hint: {'center_x': .8, "center_y": .4}
                
                    MDCheckbox:
                        id: rectangle_checkbox
                        group: 'group'
                        active: True
                        #pos_hint: {'center_x': .1, "center_y": .4}
                        on_active: root.on_checkbox_active(1)
                    MDLabel:
                        text: "Без контрольной трубки"
                        font_style: "Label"
                        role: "medium"
                        #pos_hint: {'center_x': .2, "center_y": .4}


                Spacer: 
                Spacer: 
                Spacer: 

                
                    

                Spacer: 
                    
#-------------------------------------------------------------------------------------------------            
        MDTopAppBar:
            id: appbar_custom
            type: "small"  
            padding:[dp(15),dp(15),dp(15),dp(35)]
            #spacing:dp(25)
                
            MDTopAppBarLeadingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "menu"
                    theme_icon_color: "Custom"
                    icon_color: "green"
                    on_release: app.open_left_menu(self, 1)

            MDTopAppBarTitle:
                id: proba_name_bar
                pos_hint: {"center_x": .5, "center_y": .5}
                text: " "
                theme_text_color: "Custom"
                text_color: "green"

            
                
<Spacer@Widget>
    size_hint_y: None
    height: "12dp"
<Spacer10@Widget>
    size_hint_y: None
    height: "120dp"


    
                