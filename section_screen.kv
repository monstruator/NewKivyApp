<SectionScreen>
    name: "obj_record"
    md_bg_color: self.theme_cls.primaryContainerColor
    text_date: ""
    text_time1: ""
    text_time2: ""
    text_name: ""
    text_description: ""
    text_temp: ""
    text_presure: ""
    text_hum: ""

    MDBoxLayout:
        orientation: "vertical"
        
        MDTopAppBar:
            type: "small" 
            theme_bg_color:"Custom"
            md_bg_color: 0.2, .3, .3, 1
            padding: "24dp"
            MDTopAppBarTitle:
                text: "Рабочее сечение и точки"
                text_color: "white"
                #pos_hint: {"center_x": .5}
                font_style: "Headline"
                role: "small"

            MDTopAppBarTrailingButtonContainer:    
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    theme_icon_color: "Custom"
                    icon_color: "white"
                    on_release: app.go_to_obj()
        
        ScrollView:
            MDGridLayout:
                id: custom_widget_box
                size_hint_y: None
                cols:1
                #height: self.minimum_height
                padding:[dp(25),dp(15),dp(15),dp(35)]
                #spacing:dp(25)
                height: "3500dp" 

                Spacer:

                MDTextField:
                    id: part_len
                    size_hint_x: None  # Disable automatic width adjustment based on the parent container
                    width: root.width / 2
                    #size_hint_x: .4
                    
                    text: "0"
                    #pos_hint: { "center_y": .5}
                    MDTextFieldHintText:
                        text: "Длина линейного участка"
            
                Spacer:
                Spacer:

                MDLabel:
                #size_hint_x: .1
                    adaptive_height: True
                    font_style: "Title"
                    role: "medium"
                    text: "Форма сечения"
                    #pos_hint: {'center_x': .8, "center_y": .8}

                MDBoxLayout: 
                    #md_bg_color: "red"
                    adaptive_height: True
                    #pos_hint: {'center_x': .1, "center_y": .5}
                    #size_hint_x: .6
                    padding: "24dp"
                    #spacing: "24dp"
                    
                    MDCheckbox:
                        id: circle_checkbox
                        group: 'group'
                        active: True
                        pos_hint: {'center_x': .9, "center_y": .4}
                        on_active: root.on_checkbox_active(0)
                    MDLabel:
                        text: "Круглая"
                        pos_hint: {'center_x': .8, "center_y": .4}
                
                    MDCheckbox:
                        id: rectangle_checkbox
                        group: 'group'
                        active: True
                        pos_hint: {'center_x': .1, "center_y": .4}
                        on_active: root.on_checkbox_active(1)
                    MDLabel:
                        text: "прямоугольная"
                        pos_hint: {'center_x': .2, "center_y": .4}


                Spacer: 

                MDBoxLayout:
                    spacing: "44dp"
                    adaptive_height: True
                    MDLabel:
                        text:"Удвоить число точек "
                        font_style:"Title"
                        role:"medium"
                        #size_hint_x: 0.8
                        
                    MDSwitch:
                        id: double_poins_id
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_active: root.double_points_switch(*args)
                        
                    Widget:    
                


                Spacer: 
                Spacer:
                Spacer:

                #MDBoxLayout:
                #    #md_bg_color: "blue"
                #    id: selection_widget
                #    orientation: "vertical"
                
            
                #MDBoxLayout:                  
#-------------------------------------------------------------------------------------------------            
        MDTopAppBar:
            id: appbar_custom
            type: "small"  
            padding:[dp(15),dp(15),dp(15),dp(35)]
            #spacing:dp(25)
                
            MDTopAppBarLeadingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "menu"
                    theme_icon_color: "Custom"
                    icon_color: "green"
                    on_release: app.open_left_menu(self, 1)

            MDTopAppBarTitle:
                id: proba_name_bar
                pos_hint: {"center_x": .5, "center_y": .5}
                text: " "
                theme_text_color: "Custom"
                text_color: "green"

            
                
<Spacer@Widget>
    size_hint_y: None
    height: "12dp"
<Spacer10@Widget>
    size_hint_y: None
    height: "120dp"


    
                