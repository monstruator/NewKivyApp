<SectionScreen>
    name: "obj_record"
    md_bg_color: self.theme_cls.primaryContainerColor
    text_date: ""
    text_time1: ""
    text_time2: ""
    text_name: ""
    text_description: ""
    text_temp: ""
    text_presure: ""
    text_hum: ""

    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            type: "small" 
            theme_bg_color:"Custom"
            md_bg_color: 0.2, .3, .3, 1

            MDTopAppBarTitle:
                text: "Рабочее сечение и точки"
                text_color: "white"
                pos_hint: {"center_x": .5}
                font_style: "Headline"
                role: "small"

            MDTopAppBarTrailingButtonContainer:    
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    theme_icon_color: "Custom"
                    icon_color: "white"
                    on_release: app.go_to_obj()
                    
        ScrollView:
            MDGridLayout:
                id: custom_widget_box
                size_hint_y: None
                cols:1
                height: self.minimum_height
                padding:[dp(15),dp(15),dp(15),dp(35)]
                spacing:dp(25)
                height: "1400dp"

                MDCard:
                    theme_bg_color:"Custom"
                    md_bg_color: self.theme_cls.primaryContainerColor
                    md_bg_color_disabled: self.theme_cls.primaryContainerColor
                    ripple_behavior: False

                    Widget:
                        size_hint_x: .05
                      
                    MDBoxLayout: #основной бокс в середине на 0.8 по х
                        size_hint_x: .8
                        orientation: "vertical"
                        spacing: "25dp"
                        padding: "12dp"

                        MDBoxLayout:
                            orientation: "horizontal"
                                
                            MDLabel:
                                size_hint_x: .4
                                font_style: "Title"
                                role: "medium"
                                text: "Длина линейного участка" 

                            MDTextField:
                                size_hint_x: .15
                                id: part_len
                                mode: "filled"
                                text: "0"
                                #on_text: root.on_temp_change(self.text)
                                
                            Widget:
                                size_hint_x: .45

                        Spacer:

                        MDBoxLayout:
                            orientation: "horizontal"
                                
                            MDLabel:
                                size_hint_x: .4
                                font_style: "Title"
                                role: "medium"
                                text: "Форма сечения" 

                            MDBoxLayout:
                                MDCheckbox:
                                    group: 'group'
                                    size_hint: None, None
                                    size: dp(48), dp(48)
                                    active: True
                                    pos_hint: {'center_x': .1, 'center_y': .5}
                                MDLabel:
                                    text: "Круглая"
                                    adaptive_height: True
                                    padding_x: "12dp"
                                    pos_hint: {'center_x': .2, 'center_y': .5}
                                MDCheckbox:
                                    
                                    group: 'group'
                                    size_hint: None, None
                                    size: dp(48), dp(48)
                                    active: True
                                    pos_hint: {'center_x': .5, 'center_y': .5}
                                MDLabel:
                                    text: "прямоугольная"
                                    adaptive_height: True
                                    padding_x: "12dp"
                                    pos_hint: {'center_x': .6, 'center_y': .5}
                                
                        Widget:
                            id: circular_widget
                            canvas:
                                Color:
                                    rgba: 1, 0, 0, 1
                                Ellipse:
                                    pos: self.pos
                                    size: self.size

                        Widget:
                            id: rectangular_widget
                            canvas:
                                Color:
                                    rgba: 0, 0, 1, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                        Spacer:
                        
                        MDBoxLayout:
                            orientation: "horizontal"
                            spacing: "22dp" 
                            #theme_bg_color:"Custom"
                            #md_bg_color: 0.2, .3, .3, 1 
                            MDLabel:
                                font_style: "Title"
                                role: "large"
                                text: "Создание нового измерения"  

                            CustomButton:
                                pos_hint: {"center_x": .5}
                                #icon: "content-save"
                                icon: "file-document-plus-outline"
                                on_release: root.new_meas()
   
                        MDTextField:
                            id: p1n
                            mode: "outlined"
                            MDTextFieldHintText:
                                text: "Рабочее давление, кПа"
                        
                        MDTextField:
                            id: p2n
                            mode: "outlined"
                            MDTextFieldHintText:
                                text: "Контрольное давление, кПа"

                        MDTextField:
                            id: p3n
                            mode: "outlined"
                            MDTextFieldHintText:
                                text: "Полное давление, кПа"

                        MDTextField:
                            id: p4n
                            mode: "outlined"
                            MDTextFieldHintText:
                                text: "Ротаметра давление, кПа"

                        MDTextField:
                            id: p5n
                            mode: "outlined"
                            MDTextFieldHintText:
                                text: "Атмосферное давление, кПа"
                            
                        Spacer:
                        Spacer:
                        Spacer:
                        Spacer:
                        Spacer:
                        Spacer:
                    MDBoxLayout:   
                        size_hint_x: .05    
                          
#-------------------------------------------------------------------------------------------------            
        MDTopAppBar:
            id: appbar_custom
            type: "small"  
            padding:[dp(15),dp(15),dp(15),dp(35)]
            #spacing:dp(25)
                
            MDTopAppBarLeadingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "menu"
                    theme_icon_color: "Custom"
                    icon_color: "green"
                    on_release: app.open_left_menu(self, 1)

            MDTopAppBarTitle:
                id: proba_name_bar
                pos_hint: {"center_x": .5, "center_y": .5}
                text: " "
                theme_text_color: "Custom"
                text_color: "green"

            
                
<Spacer@Widget>
    size_hint_y: None
    height: "12dp"
<Spacer10@Widget>
    size_hint_y: None
    height: "120dp"

