<GostScreen>
    record_name : "None"
    md_bg_color: self.theme_cls.primaryContainerColor

    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            id: top1
            theme_bg_color:"Custom"
            md_bg_color: 0.2, .3, .3, 1
            adaptive_height: False
            size_hint_y: None
            height: label_top.texture_size[1] + 40
            orientation: "horizontal"
            spacing: "10dp"
            padding:[dp(15),dp(15),dp(15),dp(15)]
            
            MDLabel:
                id: label_top
                font_style: "Title"
                role: "small"    
                text: "По ГОСТ 17.2.4.06-90"
                text_color: "white"
                valign: "center"
                halign: "center"
                
            MDIconButton:
                icon: "arrow-left"
                style: "tonal"
                theme_bg_color: "Custom"
                md_bg_color: 0.2, .3, .3, 1
                #md_bg_color: 0.2, .7, .3, 1
                theme_icon_color: "Custom"
                icon_color: "white"
                pos_hint: {"center_y": .5}
                on_release: app.go_to_result()
        
        
        ScrollView:
            MDGridLayout:
                adaptive_height: True
                id: custom_widget_box
                size_hint_y: None
                cols:1
                #height: self.minimum_height
                padding:[dp(15),dp(15),dp(15),dp(25)]
                spacing:dp(35)
                #height: "2000dp" 


                Spacer:
                TitleBox:
                    text1:"[b]Давления в газоходе[/b]"
                    
                SuperBox:
                    id: box1
                    text1: "Динамическое давление в контрольной точке (среднее по скорости)"
                SuperBox:
                    id: box2
                    text1: "Полное давление (среднее по газоходу)"      
                SuperBox:
                    id: box3
                    text1: "Статическое давление (среднее по газоходу)"      
                SuperBox:
                    id: box4
                    text1: "Средний по газоходу коэффициент отношения скоростей газа в рабочих точках к контрольной точке α(ср)"      

                TitleBox:
                    text1:"[b]Плотность газа[/b]"

                SuperBox:
                    id: box5
                    text1: "Плотность сухого газа в нормальных условиях (101.3 кПа и 0 \u00B0C;)"      
                SuperBox:
                    id: box6
                    text1: "Плотность влажного газа в нормальных условиях (101.3 кПа и 0 \u00B0C;)"      
                SuperBox:
                    id: box7
                    text1: "Плотность влажного газа в условиях газохода" 

                TitleBox:
                    text1:"[b]Скорость и расход газа[/b]"

                SuperBox:
                    id: box8
                    text1: "Скорость газа (средняя по газоходу)"      
                SuperBox:
                    id: box9
                    text1: "Объемный расход влажного газа в рабочих условиях газохода"      
                SuperBox:
                    id: box10
                    text1: "Объемный расход сухого газа в рабочих условиях газохода"  
                SuperBox:
                    id: box11
                    text1: "Объемный расход сухого газа в нормальных условиях (101.3 кПа и 0 \u00B0C;)" 

                TitleBox:
                    text1:"[b]Скоростные параметры по точкам[/b]"     

                
#-------------------------------------------------------------------------------------------------            
        
        MDBoxLayout:
            id: top1
            theme_bg_color:"Custom"
            md_bg_color: 0.2, .3, .3, 1
            adaptive_height: False
            size_hint_y: None
            height: label_top.texture_size[1] + 40
            orientation: "horizontal"
            spacing: "10dp"
            padding:[dp(15),dp(15),dp(15),dp(15)]

            #Widget:

            MDIconButton:
                icon: "menu"
                style: "tonal"
                theme_bg_color: "Custom"
                md_bg_color: 0.2, .3, .3, 1
                #md_bg_color: 0.2, .7, .3, 1
                theme_icon_color: "Custom"
                icon_color: "white"
                pos_hint: {"center_y": .5}
                on_release: app.open_left_menu(self, 1)
            
            MDBoxLayout:
                MDLabel:
                    text: root.record_name
                    text_color: "white"
                    valign: "center"
                    halign: "center"
            
                
<Spacer@Widget>
    size_hint_y: None
    height: "12dp"
<Spacer10@Widget>
    size_hint_y: None
    height: "120dp"

<TitleBox@MDBoxLayout>
    height: label_title1.texture_size[1] + 10
    text1: ""
    MDLabel:
        markup: True
        id: label_title1
        halign: "center"
        text: root.text1

<SuperBox@MDBoxLayout>
    #theme_bg_color:"Custom"
    #md_bg_color: 0.9, .9, .9, 1
    adaptive_height: False
    size_hint_y: None
    height: label1.texture_size[1]
    orientation: "horizontal"
    spacing: "10dp"
    padding: "5dp"
    text1: ""
    text2: "0 Па"

    MDLabel:
        id: label1
        font_style: "Title"
        role: "small"    
        text: root.text1
        halign: "left"
        
    MDLabel:
        id: label11
        halign: 'center'
        pos_hint: {"center_y": .5}
        text: root.text2
        size_hint_x: 0.25    
